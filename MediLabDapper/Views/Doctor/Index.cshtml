@model IEnumerable<ResultDoctorWithDepartmentDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h3>Doktorlar</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Doktor Adı Soyadı</th>
        <th>Açıklama</th>
        <th>Departman</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" height="75" width="75" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>@item.DepartmentName</td>
            <td>
                <a href="/Doctor/DeleteDoctor/@item.DoctorId" class="btn btn-outline-danger">Sil</a>
                <a href="/Doctor/UpdateDoctor/@item.DoctorId" class="btn btn-outline-warning">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Doctor/CreateDoctor/" class="btn btn-primary">Yeni Doktor Ekle</a>

